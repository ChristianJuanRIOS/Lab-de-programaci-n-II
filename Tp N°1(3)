#include <iostream>
using namespace std;

int main() {
    int numero;

    cout << "Ingrese un número entero positivo de hasta tres cifras: ";
    cin >> numero;

    if (numero >= 0 && numero < 10)
        cout << "El número tiene 1 cifra" << endl;
    else if (numero >= 10 && numero < 100)
        cout << "El número tiene 2 cifras" << endl;
    else if (numero >= 100 && numero < 1000)
        cout << "El número tiene 3 cifras" << endl;
    else
        cout << "Error: El número tiene más de tres cifras" << endl;

    return 0;
}
