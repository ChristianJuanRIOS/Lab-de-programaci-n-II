#include <iostream>
#include <string>
#include <vector>
using namespace std;

class Alumno {
private:
    string nombre;
    double nota1, nota2, nota3;

public:
    Alumno(string n, float n1, float n2, float n3)
        : nombre(n), nota1(n1), nota2(n2), nota3(n3) {}

    string getNombre() const { return nombre; }
    double calcularPromedio() const { return (nota1 + nota2 + nota3) / 3; }

    void mostrarDatos() const {
        cout << "Nombre: " << nombre << endl;
        cout << "Promedio: " << calcularPromedio() << endl;
    }
};

int main() {
    vector<Alumno> alumnos;
    int numAlumnos;
    string nombre;
    double nota1, nota2, nota3;

    cout << "Ingrese el nÃºmero de alumnos: ";
    cin >> numAlumnos;

    for (int i = 0; i < numAlumnos; i++) {
        cout << "Ingrese el nombre del alumno: ";
        cin >> nombre;
        cout << "Ingrese la nota 1: ";
        cin >> nota1;
        cout << "Ingrese la nota 2: ";
        cin >> nota2;
        cout << "Ingrese la nota 3: ";
        cin >> nota3;
        alumnos.push_back(Alumno(nombre, nota1, nota2, nota3));
    }

    for (const auto& alumno : alumnos) {
        alumno.mostrarDatos();
    }

    return 0;
}
