#include <iostream>
using namespace std;

double calcularMedia(double num1, double num2, double num3) {
    return (num1 + num2 + num3) / 3;
}

int main() {
    double num1, num2, num3;
    cout << "Ingrese tres nÃºmeros: ";
    cin >> num1 >> num2 >> num3;
    cout << "Media: " << calcularMedia(num1, num2, num3) << endl;
    return 0;
}
